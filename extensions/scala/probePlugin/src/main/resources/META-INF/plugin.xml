<idea-plugin>
    <id>org.virtuslab.ideprobe.scala</id>
    <name>Virtuslab IdeProbe Scala</name>
    <vendor email="info@virtuslab.com" url="http://www.virtuslab.com">VirtusLab</vendor>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.virtuslab.ideprobe</depends>
    <depends>org.intellij.scala</depends>
    <idea-version since-build="191.*"/>

    <extensions defaultExtensionNs="org.virtuslab.ideprobe">
        <probeHandlerContributor implementation="org.virtuslab.ideprobe.scala.ScalaProbeHandlerContributor"/>
        <runConfigurationTransformer implementation="org.virtuslab.ideprobe.scala.ScalaTestRunConfigurationTransformerWrong"/>
    </extensions>
</idea-plugin>
